{# Home Template #}
{% extends "_base.twig" %}

{# header block #}
{% block header %}
    <script src="js/map.js">
    </script>
{% endblock %}

{# content block #}
{% block content %}
    <div class="container-fluid portalContainer">
	<div class="container">
	    <div class="page-header-v2 row">
		<div class="col-lg-8">
		    <h1 class="h2"> {{ data.pageHeader }} </h1>
		</div>
		<div class="col-md-4">
		    <a href="/accidents/add" class="btn btn-primary pull-right">
			<i class="fa fa-plus"></i> Accident Report
		    </a>
		</div>
	    </div>
	    <div class="row">
		<div class="col-md-12">
		    {% if (content.accidents) %}
			<table class="table table-hover table-striped table-responsive">
			    <thead>
				<tr>
				    <th>Acc ID </th><th>Street</th><th>Latitude</th>
				    <th>Longitude</th><th>Date</th>
				    <th>View</th><th>Edit</th>
				</tr>
			    </thead>
			    <tbody>
				{% for  acc in content.accidents %}
				    <tr>
					<td>{{ acc.record_id }}</td><td>{{ acc.Street }}</td>
					<td>{{ acc.location_lat }}</td><td>{{ acc.location_long }}</td>
					<td>{{ acc.Date }} </td>
					<td><a href="/accidents/view/{{ acc.record_id }}">View</a></td>
					<td><a href="/accidents/edit/{{ acc.record_id }}">Edit</a></td>
				    </tr>
				{% endfor %}
			    </tbody>

			</table>
		    {% elseif (data.content.error) %}
			<h1 class="text-capitalize text-center text-warning">{{ data.content.error }}</h1>
		    {% else %}
			<h1 class="text-capitalize text-center text-warning">No accident report found </h1>
		    {% endif %}
		</div>
	    </div>
	</div>
    </div>

{% endblock %}

{# footer block #}

{% block footer %}
{% endblock %}
